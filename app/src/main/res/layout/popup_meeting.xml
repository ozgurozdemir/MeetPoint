<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/meetingHourTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="28sp"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            />
        <TextView
            android:id="@+id/meetingDateTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:textColor="#fff"
            android:textSize="18sp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            />
        <TextView
            android:id="@+id/meetingNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:textColor="#fff"
            android:textSize="18sp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Location: "
            android:gravity="end"
            android:layout_weight="50"
            android:textSize="18sp"
            android:paddingEnd="10dp"/>
        <TextView
            android:id="@+id/meetingLocationTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="22222222"
            android:gravity="start"
            android:paddingRight="5dp"
            android:textSize="18sp"
            android:layout_weight="50"/>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Participants: "
            android:gravity="end"
            android:layout_weight="50"
            android:textSize="18sp"
            android:paddingEnd="10dp"/>
        <TextView
            android:id="@+id/meetingParticipantsTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="22222222"
            android:gravity="start"
            android:paddingRight="5dp"
            android:textSize="18sp"
            android:layout_weight="50"/>
    </LinearLayout>
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Additional Note: "
            android:gravity="end"
            android:layout_weight="50"
            android:textSize="16sp"
            android:paddingEnd="10dp"/>
        <TextView
            android:id="@+id/meetingNoteTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="22222222"
            android:gravity="start"
            android:paddingRight="5dp"
            android:textSize="18sp"
            android:layout_weight="50"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/deleteMeetingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:layout_weight="50"
            android:background="@color/background"
            android:textColor="@color/colorAccent"/>
        <Button
            android:id="@+id/okMeetingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:layout_weight="50"
            android:background="@color/background"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>


</LinearLayout>
